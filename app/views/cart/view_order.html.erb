<h1>Your Cart</h1>

<div>
	<% if @line_items != nil %>
		
		<div class="row">
			<div class="card-deck">
			  <% @line_items.each do |item| %>
			    <div class="col-md-2 d-flex align-items-stretch">
			      <div class="card mb-2">

			        <div class="card-body">
			          <% if item.product.image.url.nil? == false %>
			            <p><%= image_tag item.product.image.url %></p>
			          <% end %>


			        </div>

				    <div class="card-footer">
			          <h6><%= link_to item.product.name, item.product, class: "card-title" %></h6>
			          <p><%= number_to_currency item.product.price %></p>
			          <p>Qty: <%= item.quantity %></p>
			          <p>Subtotal: <%= number_to_currency item.line_item_total %></p>





			        </div>

			      </div>
			    </div>
			  <% end %>
			</div>
		</div>
	 	<div>
	 		
	 	</div>
	<% else %>

		<p>Your cart is empty.</p>
		<p><%= link_to "Shop", root_path, class: "btn btn-success" %></p>

	<% end %>

</div>
<div>
	<%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-success" %>
</div>


